<% layout("/layouts/boilerplate") %>

  <div class="container">
    <p style="text-align: center; background-color: #fe424d; padding: 5px;">Click on view Details for more details</p>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
      <% if (results.length > 0) { %>
        <% results.forEach(result => { %>
          <!-- <a href="/listings/<%= result._id %>" class="listing-link"> -->
          <div class="col-md-4 mb-4">
            <div class="card col listing-card">
              <img src="<%= result.image.url %>" class="card-img-top" alt="<%= result.title %>" style="height: 20rem">

              <!-- <div class="card-img-overlay"></div> -->
              <div class="card-body">
                <p class="card-text">
                  <b><%= result.title %></b> <br />
                  &#8377; <%= result.price.toLocaleString("en-IN") %> / night
                  <br>
                  <%= result.description.substring(0, 100) %>
                </p>
                <a href="/listings/<%= result._id %>" class="btn btn-primary">View Details</a>
              </div>
            </div>
          </div>
        </a>
        <% }) %>
      <% } else { %>
        <p>No results found.</p>
      <% } %>
    </div>
  </div>

  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
